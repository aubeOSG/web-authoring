{
  "name": "@scrowl/editor",
  "productName": "Scrowl",
  "description": "A LMS course authoring tool",
  "version": "0.0.100",
  "license": "MIT",
  "keywords": [],
  "author": {
    "name": "OSG"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scrowl-io/authoring.git",
    "directory": "packages/editor"
  },
  "bugs": {
    "url": "https://github.com/scrowl-io/authoring/issues"
  },
  "homepage": "https://github.com/scrowl-io/authoring/packages/editor#readme",
  "scripts": {
    "copy:assets": "node ./scripts/copy-assets.mjs",
    "prestart": "rimraf web && webpack",
    "start": "cross-env NODE_ENV=development concurrently \"yarn start:proxy\" \"yarn start:app\" \"yarn start:server\" \"yarn reload:server\"",
    "start:proxy": "nodemon --watch src/proxy.ts --exec webpack",
    "start:app": "parcel watch --target app --no-cache",
    "start:server": "wait-on ./web/app.html && parcel watch --target server --no-cache",
    "reload:server": "wait-on ./web/server.js && nodemon --watch ./web/server.js --exec node ./web/server.js",
    "preseed": "parcel build --target seed --no-cache",
    "seed": "node ./web/seed-db.js"
  },
  "app": "./web/app.html",
  "server": "./web/server.js",
  "seed": "./web/seed-db.js",
  "targets": {
    "main": false,
    "server": {
      "context": "node",
      "source": "./src/server/index.ts",
      "engines": {
        "node": "16.15.1"
      }
    },
    "app": {
      "context": "browser",
      "isLibrary": false,
      "includeNodeModules": true,
      "source": "./src/app/index.html",
      "distDir": "./web",
      "publicUrl": "/public"
    },
    "seed": {
      "context": "node",
      "source": "./src/server/seed-db.ts",
      "engines": {
        "node": "16.15.1"
      }
    }
  },
  "eslintConfig": {
    "extends": "@scrowl/config"
  },
  "prettier": "@scrowl/config/prettier",
  "stylelint": {
    "extends": "@scrowl/config/stylelint",
    "rules": {
      "scss/at-extend-no-missing-placeholder": null
    }
  },
  "devDependencies": {
    "@parcel/core": "2.8.3",
    "@parcel/packager-ts": "2.8.3",
    "@parcel/reporter-dev-server": "2.8.3",
    "@parcel/runtime-react-refresh": "2.8.3",
    "@parcel/transformer-sass": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "@scrowl/config": "^0.0.100",
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.8.4",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-redux": "^7.1.24",
    "@types/sharp": "^0.31.0",
    "@types/uuid": "^8.3.4",
    "body-parser": "^1.20.1",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "parcel": "2.8.3",
    "postcss": "^8.4.17",
    "postcss-import": "^14.1.0",
    "postcss-modules": "^4.3.1",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "wait-on": "^6.0.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@popperjs/core": "2.11.6",
    "@reduxjs/toolkit": "^1.8.6",
    "@scrowl/player": "^0.0.100",
    "@scrowl/runtime": "^0.0.100",
    "@scrowl/template-block-text": "^1.0.99",
    "@scrowl/template-core": "^1.0.99",
    "@scrowl/template-lesson-intro": "^1.0.99",
    "@scrowl/template-simple-text": "^1.0.99",
    "@scrowl/template-simple-video": "^1.0.99",
    "@scrowl/template-two-column": "^1.0.99",
    "@scrowl/template-quiz": "^1.0.99",
    "@scrowl/ui": "^0.0.40",
    "adm-zip": "^0.5.9",
    "axios": "^1.2.1",
    "bootstrap": "^5.2.2",
    "framer-motion": "^7.5.3",
    "fs-extra": "^10.1.0",
    "handlebars": "^4.7.7",
    "hasha": "^5.2.2",
    "knex": "^2.4.2",
    "lottie-web": "^5.9.6",
    "md5": "^2.3.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-highlight-words": "^0.18.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "scorm-again": "^1.7.1",
    "sharp": "^0.31.2",
    "simple-scorm-packager": "^0.2.7",
    "typescript": "4.7.4",
    "uuid": "^9.0.0"
  }
}
