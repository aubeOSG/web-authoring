{
  "modules": true,
  "plugins": {
    "postcss-modules": {
      "generateScopedName": "[local]",
      "localsConvention": "camelCase"
    },
    "postcss-url": true,
    "@scrowl/postcss-prefixer": {
      "prefix": "owlui-",
      "ignore": [
        "active",
        "bg-primary",
        "bg-secondary",
        "bg-success",
        "bg-danger",
        "bg-warning",
        "bg-info",
        "bs-popover-bottom",
        "bs-popover-end",
        "bs-popover-start",
        "bs-popover-top",
        "bs-tooltip-bottom",
        "bs-tooltip-end",
        "bs-tooltip-start",
        "bs-tooltip-top",
        "bg-light",
        "bg-dark",
        "btn-close",
        "btn-close-white",
        "collapse",
        "collapsed",
        "collapse-horizontal",
        "collapsing",
        "d-flex",
        "disabled",
        "fade",
        "flex-column",
        "flex-end",
        "flex-start",
        "hiding",
        "flex-column",
        "invisible",
        "is-valid",
        "is-invalid",
        "invalid",
        "invalid-feedback",
        "mb-3",
        "mb-4",
        "me-auto",
        "justify-content-center",
        "justify-content-end",
        "popover-arrow",
        "rounded-pill",
        "show",
        "showing",
        "text-muted",
        "text-primary",
        "text-secondary",
        "text-success",
        "text-danger",
        "text-warning",
        "text-info",
        "text-light",
        "text-dark",
        "tooltip-arrow",
        "valid-feedback",
        "valid-tooltip",
        "visible",
        "visually-hidden",
        "was-validated"
      ]
    }
  }
}
