  "scripts": {
    "clean": "rimraf ../.parcel-cache",
    "prebuild": "yarn run clean && rimraf dist",
    "build": "parcel build --target prod --no-cache && tsc"
  },
  "main": "./src/index.ts",
  "prod": "./dist/scrowl.template-core.js",
