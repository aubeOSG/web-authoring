  "exports": {
    ".": {
      "require": "./dist/scrowl.template-core.js",
      "default": "./dist/scrowl.template-core.js",
      "import": "./src/index.ts"
    },
    "./src": "./src/index.ts"
  },
  "eslintConfig": {
    "extends": "@scrowl/config"
  },
  "prettier": "@scrowl/config/prettier",
  "stylelint": {
    "extends": "@scrowl/config/stylelint"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/",
    "src/",
    "package.json"
  ],
  "devDependencies": {
    "@parcel/core": "2.7.0",
    "@parcel/packager-ts": "2.7.0",
