{
  "extends": "@scrowl/config/tsconfig",
  "compilerOptions": {
    "types": ["@scrowl/config/src/typings"],
    "outDir": "dist",
    "declaration": true,
    "noEmit": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./types/*.d.ts",
    "./web/**/*.ts",
    "./web/**/*.tsx"
  ],
  "exclude": ["./scripts/**/*.js"]
}
