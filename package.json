{
  "name": "@scrowl/root",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "",
    "update": "lerna run build --include-dependencies && yarn workspace @scrowl/editor run copy:assets",
    "prestart:update": "yarn run update",
    "start:update": "yarn workspace @scrowl/editor run start",
    "start": "yarn workspace @scrowl/editor run start",
    "start:web": "yarn workspace @scrowl/editor run start:web",
    "serve:web:dev": "docker compose --file containers/web.docker-compose.yml --env-file ./.env.dev up --build -d",
    "stop:web:dev": "docker compose --file containers/web.docker-compose.yml --env-file ./.env.dev down && docker compose --file containers/web.docker-compose.yml --env-file ./.env.dev rm",
    "prepackage": "yarn run update",
    "package": "yarn workspace @scrowl/editor run package",
    "package:test": "yarn workspace @scrowl/editor run package:test",
    "version": "lerna version --conventional-commits --no-git-tag-version"
  },
  "workspaces": [
    "config",
    "packages/*",
    "packages/templates/*",
    "plugins/*"
  ],
  "devDependencies": {
    "lerna": "^5.5.4"
  }
}
